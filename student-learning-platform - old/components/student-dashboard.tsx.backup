"use client"

import { useState, useEffect } from 'react'
import { useRouter } from 'next/navigation'

// Type definitions
interface User {
  uid: string
  email: string
  displayName?: string
}

interface Profile {
  name?: string
  role?: string
}

interface VideoProgress {
  video_id: string
  watch_time: number
  completed: boolean
}

interface SessionData {
  totalSessions: number
  totalTime: number
  recentSessions: any[]
}

interface CourseProgress {
  webDevelopment: number
  appDevelopment: number
  gameDevelopment: number
  overall: number
}

interface CourseData {
  id: string
  title: string
  progress: number
  completedVideos: number
  totalVideos: number
  currentVideoProgress: number
}

interface StudentDashboardProps {
  user: User
  profile: Profile | null
  videoProgress: VideoProgress[]
  sessionData: SessionData | null
  courseProgress: CourseProgress
  handleLogout: () => void
  firebaseProgress?: any
}

export function StudentDashboard({ 
  user, 
  profile, 
  videoProgress, 
  sessionData, 
  courseProgress, 
  handleLogout,
  firebaseProgress
}: StudentDashboardProps) {
  const router = useRouter()
  const [monitoring, setMonitoring] = useState({
    isActive: false,
    cameraOn: false,
    postureStatus: 'Good posture',
    attentionStatus: 'Focused'
  })

  // Focus-aware progress control
  const [focusState, setFocusState] = useState({
    isFocused: true,
    tabActive: true,
    faceDetected: true,
    videoPlaying: false
  })

  // Enhanced monitoring states
  const [monitoringStatus, setMonitoringStatus] = useState({
    posture: 'Good Posture',
    attention: 'Focused',
    faceDetection: 'Detected',
    monitoringActive: false
  })

  // Real-time alerts and activity
  const [alerts, setAlerts] = useState([
    { id: 1, type: 'info', message: 'System initialized', timestamp: new Date() }
  ])

  // Add new alert
  const addAlert = (type: string, message: string) => {
    const newAlert = {
      id: Date.now(),
      type,
      message,
      timestamp: new Date()
    }
    setAlerts(prev => [newAlert, ...prev.slice(0, 4)]) // Keep last 5 alerts
  }
  
  // Enhanced course data with detailed progress tracking
  const [courses, setCourses] = useState({
    'web-dev': { 
      id: 'web-dev',
      progress: courseProgress.webDevelopment, 
      title: 'Web Development',
      completedVideos: 0,
      totalVideos: 10,
      currentVideoProgress: 0,
      lastWatchedVideo: null,
      lastPosition: 0
    },
    'android-dev': { 
      id: 'android-dev',
      progress: courseProgress.appDevelopment, 
      title: 'App Development',
      completedVideos: 0,
      totalVideos: 10,
      currentVideoProgress: 0,
      lastWatchedVideo: null,
      lastPosition: 0
    },
    'game-dev': { 
      id: 'game-dev',
      progress: courseProgress.gameDevelopment, 
      title: 'Game Development',
      completedVideos: 0,
      totalVideos: 10,
      currentVideoProgress: 0,
      lastWatchedVideo: null,
      lastPosition: 0
    }
  })

  // Continue Learning modal state
  const [showContinueModal, setShowContinueModal] = useState(false)

  // Calculate detailed course progress from localStorage (real-time)
  const calculateDetailedProgress = (uid: string) => {
    const updatedCourses = { ...courses }
    
    Object.keys(updatedCourses).forEach(courseId => {
      const course = updatedCourses[courseId as keyof typeof updatedCourses]
      
      // Get all video progress for this course from localStorage
      if (typeof window !== 'undefined') {
        const videoProgressKeys = Object.keys(localStorage).filter(key => 
          key.includes(`video_progress_${courseId}_${uid}`)
        )
        
        let completedVideos = 0
        let totalPartialProgress = 0
        let lastWatchedVideo: any = null
        let lastPosition = 0
        let lastWatchTime = 0
        
        videoProgressKeys.forEach(key => {
          try {
            const data = JSON.parse(localStorage.getItem(key) || '{}')
            if (data.completed) {
              completedVideos += 1
            } else {
              // Calculate partial progress based on valid watch time
              const videoProgress = (data.validWatchTime || 0) / (data.totalDuration || 1)
              totalPartialProgress += Math.min(videoProgress, 0.99) // Cap at 99% for incomplete
            }
            
            // Track most recently watched video
            if (data.lastWatchTime && data.lastWatchTime > lastWatchTime) {
              lastWatchedVideo = {
                id: data.video_id || key,
                title: data.videoTitle || `Video ${key.split('_').pop()}`,
                courseId: courseId,
                lastPosition: data.lastPosition || 0,
                duration: data.totalDuration || 0,
                completed: data.completed || false,
                thumbnail: data.thumbnail || ''
              }
              lastPosition = data.lastPosition || 0
              lastWatchTime = data.lastWatchTime
            }
          } catch (e) {
            // Skip invalid data
          }
        })
        
        // Update course data
        course.completedVideos = completedVideos
        course.progress = Math.round(((completedVideos + totalPartialProgress) / course.totalVideos) * 100)
        course.currentVideoProgress = totalPartialProgress
        course.lastWatchedVideo = lastWatchedVideo
        course.lastPosition = lastPosition
      }
    })
    
    setCourses(updatedCourses)
  }


  // Get all recent videos for continue learning
  const getRecentVideos = () => {
    if (!user) return []
    
    const recentVideos = []
    if (typeof window !== 'undefined') {
      Object.values(courses).forEach(course => {
        if (course.lastWatchedVideo) {
          recentVideos.push(course.lastWatchedVideo)
        }
      })
    }
    
    return recentVideos.sort((a, b) => (b?.id || '').localeCompare(a?.id || '')).slice(0, 6)
  }

  // Continue learning function
  const handleContinueLearning = () => {
    // First try Firebase continue learning data
    if (firebaseProgress && firebaseProgress.current) {
      const currentData = firebaseProgress.current
      router.push(`/courses/${currentData.courseId}?video=${currentData.videoId}&time=${currentData.lastWatchedTime}`)
      return
    }
    
    // Fallback to localStorage recent videos
    const recentVideos = getRecentVideos()
    if (recentVideos.length > 0) {
      // Navigate to the most recently watched video
      const latestVideo = recentVideos[0]
      router.push(`/courses/${latestVideo.courseId}?video=${latestVideo.id}&time=${latestVideo.lastPosition}`)
    } else {
      // If no recent videos, go to courses page
      router.push('/courses')
    }
  }


  // Real-time progress updates with focus awareness
  useEffect(() => {
    if (user) {
      calculateDetailedProgress(user.uid)
      
      // Update progress every 2 seconds only when focused
      const progressInterval = setInterval(() => {
        if (focusState.isFocused && focusState.tabActive && focusState.faceDetected) {
          calculateDetailedProgress(user.uid)
        }
      }, 2000)

      return () => clearInterval(progressInterval)
    }
  }, [user, focusState])

  // Comprehensive focus-aware event listeners
  useEffect(() => {
    const handleVisibilityChange = () => {
      const isTabActive = !document.hidden
      const isFocused = !document.hidden && document.hasFocus()
      
      setFocusState(prev => ({
        ...prev,
        tabActive: isTabActive,
        isFocused
      }))
      
      if (document.hidden) {
        addAlert('warning', '‚ö†Ô∏è Tab switched ‚Äì video paused')
      }
    }

    const handleFocus = () => {
      setFocusState(prev => ({
        ...prev,
        isFocused: true
      }))
      setMonitoringStatus(prev => ({
        ...prev,
        attention: 'Focused'
      }))
      addAlert('success', '‚úÖ Window focused ‚Äì progress resumed')
    }

    const handleBlur = () => {
      setFocusState(prev => ({
        ...prev,
        isFocused: false
      }))
      setMonitoringStatus(prev => ({
        ...prev,
        attention: 'Distracted'
      }))
      addAlert('warning', '‚ö†Ô∏è Focus lost ‚Äì attention diverted')
    }

    document.addEventListener('visibilitychange', handleVisibilityChange)
    window.addEventListener('focus', handleFocus)
    window.addEventListener('blur', handleBlur)

    return () => {
      document.removeEventListener('visibilitychange', handleVisibilityChange)
      window.removeEventListener('focus', handleFocus)
      window.removeEventListener('blur', handleBlur)
    }
  }, [])

  // Enhanced monitoring simulation
  useEffect(() => {
    if (monitoring.isActive) {
      const monitoringInterval = setInterval(() => {
        // Face detection (90% success rate)
        const faceDetected = Math.random() > 0.1
        setFocusState(prev => ({ ...prev, faceDetected }))
        setMonitoringStatus(prev => ({ 
          ...prev, 
          faceDetection: faceDetected ? 'Detected' : 'Not Detected' 
        }))
        
        if (!faceDetected) {
          addAlert('error', '‚ùå Face not detected ‚Äì attention lost')
        }

        // Posture monitoring (85% good posture rate)
        const goodPosture = Math.random() > 0.15
        setMonitoringStatus(prev => ({
          ...prev,
          posture: goodPosture ? 'Good Posture' : Math.random() > 0.5 ? 'Leaning Forward' : 'Slouching'
        }))

        if (!goodPosture) {
          addAlert('warning', '‚ö†Ô∏è Posture issue detected')
        }

        // Overall monitoring status
        setMonitoringStatus(prev => ({
          ...prev,
          monitoringActive: focusState.isFocused && faceDetected
        }))

      }, 3000)

      return () => clearInterval(monitoringInterval)
    }
  }, [monitoring.isActive, focusState.isFocused])
  
  const [quizzes, setQuizzes] = useState({
    'web-dev': { available: courseProgress.webDevelopment >= 25, completed: false },
    'android-dev': { available: courseProgress.appDevelopment >= 25, completed: false },
    'game-dev': { available: courseProgress.gameDevelopment >= 25, completed: false }
  })

  // Navigation functions
  const navigateTo = (section: string) => {
    switch(section) {
      case 'video-courses':
        router.push('/courses')
        break
      case 'study-materials':
        router.push('/materials')
        break
      case 'profile':
        router.push('/profile')
        break
      case 'reports':
        router.push('/reports')
        break
    }
  }

  // Course continuation
  const continueCourse = (courseId: string) => {
    const course = courses[courseId as keyof typeof courses]
    router.push(`/courses/${courseId}`)
  }

  // Monitoring functions
  const toggleMonitoring = () => {
    setMonitoring(prev => {
      const newActive = !prev.isActive
      if (newActive) {
        // Start monitoring simulation
        console.log('Starting AI monitoring...')
      } else {
        console.log('Stopping AI monitoring...')
      }
      return {
        ...prev,
        isActive: newActive,
        cameraOn: newActive
      }
    })
  }

  // Quiz functions
  const startQuiz = (quizId: string) => {
    const quiz = quizzes[quizId as keyof typeof quizzes]
    
    if (!quiz.available) {
      alert('This quiz is locked. Complete more course content to unlock it.')
      return
    }
    
    if (quiz.completed) {
      alert('You have already completed this quiz.')
      return
    }
    
    const course = courses[quizId as keyof typeof courses]
    alert(`Starting ${course.title} quiz...\n\nThis will test your knowledge of the course material.`)
  }

  // Keyboard shortcuts
  useEffect(() => {
    const handleKeyDown = (e: KeyboardEvent) => {
      // Ctrl/Cmd + M for monitoring toggle
      if ((e.ctrlKey || e.metaKey) && e.key === 'm') {
        e.preventDefault()
        toggleMonitoring()
      }
      
      // Escape to stop monitoring if active
      if (e.key === 'Escape' && monitoring.isActive) {
        toggleMonitoring()
      }
    }

    window.addEventListener('keydown', handleKeyDown)
    return () => window.removeEventListener('keydown', handleKeyDown)
  }, [monitoring.isActive])

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-900 to-black text-gray-100">
      {/* Header Section */}
      <header className="sticky top-0 z-50 bg-gray-900/90 backdrop-blur-lg border-b border-gray-800">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center h-16">
            <h1 className="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">
              Dashboard
            </h1>
            <div className="flex items-center gap-4">
              <span className="text-gray-400 text-sm">
                {user.email}
              </span>
              <button 
                onClick={handleLogout}
                className="flex items-center gap-2 px-4 py-2 text-sm text-red-400 bg-red-400/10 border border-red-400/30 rounded-lg hover:bg-red-400/20 transition-colors"
              >
                <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Logout
              </button>
            </div>
          </div>
        </div>
      </header>

      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* REAL-TIME OVERALL PROGRESS DASHBOARD */}
        <section className="mb-12">
          <h2 className="text-2xl font-semibold text-white mb-8 text-center">
            Real-Time Overall Progress Dashboard
            <span className="block text-sm text-gray-400 mt-2 font-normal">
              Course-wise Analysis Based ‚Ä¢ Live Updates
            </span>
          </h2>
          
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {/* Overall Progress Card */}
            <div className="lg:col-span-1">
              <div className="bg-gradient-to-br from-blue-600/20 to-purple-600/20 border border-blue-500/30 rounded-2xl p-8 backdrop-blur-sm">
                <h3 className="text-lg font-semibold text-white mb-6 text-center">Overall Progress</h3>
                
                {/* Circular Progress */}
                <div className="relative w-48 h-48 mx-auto mb-6">
                  <svg className="w-full h-full transform -rotate-90">
                    <circle
                      cx="96"
                      cy="96"
                      r="88"
                      stroke="currentColor"
                      strokeWidth="8"
                      fill="none"
                      className="text-gray-700"
                    />
                    <circle
                      cx="96"
                      cy="96"
                      r="88"
                      stroke="currentColor"
                      strokeWidth="8"
                      fill="none"
                      strokeDasharray={`${2 * Math.PI * 88}`}
                      strokeDashoffset={`${2 * Math.PI * 88 * (1 - (courseProgress.overall / 100))}`}
                      className="text-gradient-to-r from-blue-400 to-purple-400 transition-all duration-500"
                      style={{
                        stroke: 'url(#gradient)',
                        filter: 'drop-shadow(0 0 10px rgba(59, 130, 246, 0.5))'
                      }}
                    />
                    <defs>
                      <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" stopColor="#60A5FA" />
                        <stop offset="100%" stopColor="#A855F7" />
                      </linearGradient>
                    </defs>
                  </svg>
                  <div className="absolute inset-0 flex flex-col items-center justify-center">
                    <span className="text-4xl font-bold text-white">{courseProgress.overall}%</span>
                    <span className="text-sm text-gray-400">Overall</span>
                  </div>
                </div>
                
                <div className="text-center">
                  <p className="text-gray-300 text-sm mb-3">Combined learning progress across all courses</p>
                  <div className="inline-flex items-center gap-3 px-3 py-1 bg-blue-900/30 rounded-full">
                    <div className={`w-2 h-2 rounded-full ${
                      focusState.isFocused && focusState.tabActive && focusState.faceDetected ? 
                      'bg-green-400 animate-pulse' : 'bg-gray-400'
                    }`}></div>
                    <span className="text-xs text-blue-300">
                      {focusState.isFocused && focusState.tabActive && focusState.faceDetected ? 'Tracking' : 'Frozen'}
                    </span>
                  </div>
                  <p className="text-xs text-gray-500 mt-3">
                    {focusState.isFocused && focusState.tabActive && focusState.faceDetected ? 
                    '‚úÖ Progress actively counting' : 
                    '‚è∏Ô∏è Progress paused - focus lost'}
                  </p>
                </div>
              </div>
            </div>

            {/* Course-wise Progress List */}
            <div className="lg:col-span-2">
              <div className="bg-gray-800/50 border border-gray-700/50 rounded-2xl p-8">
                <h3 className="text-lg font-semibold text-white mb-6">Course-wise Progress</h3>
                
                <div className="space-y-6">
                  {Object.values(courses).map((course) => (
                    <div key={course.id} className="bg-gray-700/30 rounded-xl p-4">
                      <div className="flex items-center justify-between mb-3">
                        <div className="flex items-center gap-3">
                          <div className={`w-3 h-3 rounded-full ${
                            course.progress >= 75 ? 'bg-green-400' : 
                            course.progress >= 50 ? 'bg-yellow-400' : 
                            course.progress >= 25 ? 'bg-orange-400' : 'bg-red-400'
                          }`}></div>
                          <span className="text-white font-medium">{course.title}</span>
                        </div>
                        <div className="text-right">
                          <span className="text-lg font-bold text-white">{course.progress}%</span>
                          <span className="text-xs text-gray-400 ml-2">
                            ({course.completedVideos}/{course.totalVideos} videos)
                          </span>
                        </div>
                      </div>
                      
                      {/* Progress Bar */}
                      <div className="bg-gray-600/50 rounded-full h-3 overflow-hidden">
                        <div 
                          className="h-full rounded-full transition-all duration-500 ease-out"
                          style={{
                            width: `${course.progress}%`,
                            background: `linear-gradient(90deg, ${
                              course.progress >= 75 ? '#10b981' : 
                              course.progress >= 50 ? '#eab308' : 
                              course.progress >= 25 ? '#f97316' : '#ef4444'
                            } 0%, ${
                              course.progress >= 75 ? '#34d399' : 
                              course.progress >= 50 ? '#fde047' : 
                              course.progress >= 25 ? '#fb923c' : '#f87171'
                            } 100%)`
                          }}
                        ></div>
                      </div>
                      
                      {/* Progress Details */}
                      <div className="flex justify-between items-center mt-2 text-xs text-gray-400">
                        <span>Valid watch time: {Math.round(course.currentVideoProgress * 100)}%</span>
                        <span>
                          {course.progress >= 75 ? 'Excellent' : 
                           course.progress >= 50 ? 'Good' : 
                           course.progress >= 25 ? 'In Progress' : 'Just Started'}
                        </span>
                      </div>
                    </div>
                  ))}
                </div>

                {/* Formula info is now hidden from UI but logic remains active */}
              </div>
            </div>
          </div>
        </section>

        {/* Real-Time Alerts & Activity Indicators */}
        <section className="mb-12">
          <h2 className="text-xl font-semibold text-white mb-6">Alerts & Activity Indicators</h2>
          
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {/* Recent Alerts */}
            <div className="bg-gray-800/50 border border-gray-700/50 rounded-2xl p-6">
              <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                <span className="w-3 h-3 bg-yellow-400 rounded-full animate-pulse"></span>
                Recent Alerts
              </h3>
              
              <div className="space-y-3 max-h-64 overflow-y-auto">
                {alerts.length === 0 ? (
                  <p className="text-gray-400 text-sm text-center py-4">No recent alerts</p>
                ) : (
                  alerts.map(alert => (
                    <div 
                      key={alert.id} 
                      className={`p-3 rounded-lg border-l-4 text-sm ${
                        alert.type === 'error' ? 'bg-red-900/20 border-red-400 text-red-300' :
                        alert.type === 'warning' ? 'bg-yellow-900/20 border-yellow-400 text-yellow-300' :
                        alert.type === 'success' ? 'bg-green-900/20 border-green-400 text-green-300' :
                        'bg-blue-900/20 border-blue-400 text-blue-300'
                      }`}
                    >
                      <div className="flex items-start justify-between gap-2">
                        <span className="flex-1">{alert.message}</span>
                        <span className="text-xs opacity-70">
                          {alert.timestamp.toLocaleTimeString()}
                        </span>
                      </div>
                    </div>
                  ))
                )}
              </div>
            </div>

            {/* Monitoring Status */}
            <div className="bg-gray-800/50 border border-gray-700/50 rounded-2xl p-6">
              <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                <span className={`w-3 h-3 rounded-full ${
                  monitoringStatus.monitoringActive ? 'bg-green-400 animate-pulse' : 'bg-gray-400'
                }`}></span>
                Monitoring Status
              </h3>
              
              <div className="space-y-4">
                <div className="grid grid-cols-2 gap-4">
                  {/* Posture Status */}
                  <div className="bg-gray-700/30 rounded-xl p-3">
                    <div className="text-xs text-gray-400 mb-1">Posture</div>
                    <div className="flex items-center gap-2">
                      <div className={`w-2 h-2 rounded-full ${
                        monitoringStatus.posture.includes('Good') ? 'bg-green-400' :
                        monitoringStatus.posture.includes('Leaning') ? 'bg-yellow-400' :
                        'bg-orange-400'
                      }`}></div>
                      <span className="text-sm text-white font-medium">
                        {monitoringStatus.posture}
                      </span>
                    </div>
                  </div>

                  {/* Attention Status */}
                  <div className="bg-gray-700/30 rounded-xl p-3">
                    <div className="text-xs text-gray-400 mb-1">Attention</div>
                    <div className="flex items-center gap-2">
                      <div className={`w-2 h-2 rounded-full ${
                        monitoringStatus.attention === 'Focused' ? 'bg-blue-400' :
                        monitoringStatus.attention === 'Distracted' ? 'bg-red-400' :
                        'bg-yellow-400'
                      }`}></div>
                      <span className="text-sm text-white font-medium">
                        {monitoringStatus.attention}
                      </span>
                    </div>
                  </div>

                  {/* Face Detection */}
                  <div className="bg-gray-700/30 rounded-xl p-3">
                    <div className="text-xs text-gray-400 mb-1">Face Detection</div>
                    <div className="flex items-center gap-2">
                      <div className={`w-2 h-2 rounded-full ${
                        monitoringStatus.faceDetection === 'Detected' ? 'bg-green-400' : 'bg-red-400'
                      }`}></div>
                      <span className="text-sm text-white font-medium">
                        {monitoringStatus.faceDetection}
                      </span>
                    </div>
                  </div>

                  {/* Overall Monitoring */}
                  <div className="bg-gray-700/30 rounded-xl p-3">
                    <div className="text-xs text-gray-400 mb-1">Overall Status</div>
                    <div className="flex items-center gap-2">
                      <div className={`w-2 h-2 rounded-full ${
                        monitoringStatus.monitoringActive ? 'bg-green-400' : 'bg-gray-400'
                      }`}></div>
                      <span className="text-sm text-white font-medium">
                        {monitoringStatus.monitoringActive ? 'Active' : 'Paused'}
                      </span>
                    </div>
                  </div>
                </div>

                {/* Real-time Warnings */}
                <div className="bg-blue-900/20 border border-blue-500/30 rounded-xl p-4">
                  <h4 className="text-sm font-medium text-blue-300 mb-2">Real-time Warnings</h4>
                  <div className="space-y-1 text-xs text-blue-200">
                    <div>‚Ä¢ Tab switched ‚Üí Video auto-paused</div>
                    <div>‚Ä¢ Face not detected ‚Üí Attention lost</div>
                    <div>‚Ä¢ Posture issues ‚Üí Health warnings</div>
                    <div>‚Ä¢ Window focus lost ‚Üí Progress frozen</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        {/* Enhanced Course Navigation & Quick Access */}
        <section className="mb-12">
          <h2 className="text-xl font-semibold text-white mb-6">Course Navigation & Quick Access</h2>
          
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {/* Continue Learning */}
            <div 
              onClick={() => setShowContinueModal(true)}
              className="group bg-gradient-to-br from-green-600/20 to-emerald-600/20 border border-green-500/30 rounded-2xl p-6 cursor-pointer transition-all hover:transform hover:scale-105 hover:border-green-400/60 hover:shadow-lg hover:shadow-green-400/20"
            >
              <div className="text-3xl mb-3 group-hover:scale-110 transition-transform">üé¨</div>
              <h3 className="text-lg font-semibold text-white mb-2">Continue Learning</h3>
              <p className="text-sm text-gray-400 mb-4">Resume from last saved position</p>
              <div className="text-xs text-green-400 flex items-center gap-2">
